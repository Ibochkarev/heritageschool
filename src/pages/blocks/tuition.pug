+b.SECTION.tuition
  .container
    +e.H2.title TUITION FEES
    .row
      +tuition-card({
        name : "Pre - Nursery",
        age: "2-3 года",
        cost: "7,800 Евро в год"
      })
      +tuition-card({
        name : "Nursery - Reception",
        age: "3-5 лет",
        cost: "12,800 Евро в год"
      })
      +tuition-card({
        name : "Year 1 - Year 2",
        age: "5-7 лет",
        cost: "14,800 Евро в год"
      })
      +tuition-card({
        name : "Year 3 - Year 6",
        age: "7-10 лет",
        cost: "15,800 Евро в год"
      })
      +tuition-card({
        name : "Year 7 - Year 9",
        age: "10-13 лет",
        cost: "16,800 Евро в год"
      })
      +tuition-card({
        name : "Year 10 - Year 13",
        age: "14-18 лет",
        cost: "17,800 Евро в год"
      })
      .col-lg-8.col-md-12
        .tuition__card-block
          .tuition__card-block__wrapper
            .tuition__card-block__title Включено в стоимость:
            .tuition__card-block__wrap
              +tuition-card-block({
                icon : "university.svg",
                text: "Кембриджская программа"
              })
              +tuition-card-block({
                icon : "russia.svg",
                text: "Российская программа"
              })
              +tuition-card-block({
                icon : "checklist.svg",
                text: "Кембриджские экзамены и аттестация"
              })
              +tuition-card-block({
                icon : "book.svg",
                text: "Учебники и учебные материалы"
              })
              +tuition-card-block({
                icon : "development.svg",
                text: "Бесплатные развивающие клубы"
              })
              +tuition-card-block({
                icon : "tablet.svg",
                text: "Персональные Apple iPad"
              })
              +tuition-card-block({
                icon : "restaurant.svg",
                text: "Пятиразовое питание "
              })
              +tuition-card-block({
                icon : "buildings.svg",
                text: "Городские экскурсии "
              })
              +tuition-card-block({
                icon : "psychologist.svg",
                text: "Занятия с психологом и логопедом"
              })

      .col-lg-4.col-md-12
        .tuition__card-block
          .tuition__card-block__wrapper
            .tuition__card-block__title За дополнительную плату:
            .tuition__card-block__wrap
              .tuition__card-block__item.w-100
                .tuition__card-block__item-icon
                  img(src="img/tuition/uniform.svg", alt="")
                .tuition__card-block__item-text Школьная форма
              .tuition__card-block__item.w-100
                .tuition__card-block__item-icon
                  img(src="img/tuition/bus.svg", alt="")
                .tuition__card-block__item-text Школьный автобус
              .tuition__card-block__item.w-100
                .tuition__card-block__item-icon
                  img(src="img/tuition/thinking.svg", alt="")
                .tuition__card-block__item-text Платные развивающие клубы
              .tuition__card-block__item.w-100
                .tuition__card-block__item-icon
                  img(src="img/tuition/training.svg", alt="")
                .tuition__card-block__item-text Вечерняя дежурная группа
              .tuition__card-block__item.w-100
                .tuition__card-block__item-icon
                  img(src="img/tuition/calendar.svg", alt="")
                .tuition__card-block__item-text Летняя школа
              .tuition__card-block__item.w-100
                .tuition__card-block__item-icon
                  img(src="img/tuition/around.svg", alt="")
                .tuition__card-block__item-text  Международные поездки
